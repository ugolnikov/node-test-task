{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"@lib/*": ["api/lib/*"],
			"@controllers/*": ["api/controllers/*"],
			"@middleware/*": ["api/middleware/*"],
			"@routes/*": ["api/routes/*"]
		},
		"module": "ESNext",
		"moduleResolution": "bundler",
		"target": "ES2023",
		"strict": true,

		"esModuleInterop": true,
		"ignoreDeprecations": "5.0"
	}
}
